{
  "name": "chartjs-chart-error-bars",
  "description": "Chart.js module for charting error bars",
  "version": "1.0.0",
  "author": {
    "name": "Samuel Gratzl",
    "email": "samu@sgratzl.com",
    "url": "https://wwww.sgratzl.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgratzl/chartjs-chart-error-bars.git"
  },
  "main": "build/Chart.ErrorBars.js",
  "unpkg": "build/Chart.ErrorBars.min.js",
  "module": "build/Chart.ErrorBars.mjs",
  "files": [
    "build",
    "src/**/*.js"
  ],
  "dependencies": {
    "chart.js": "^2.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "eslint": "^5.13.0",
    "jest": "^24.1.0",
    "release-it": "^10.1.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-watch": "^4.3.1",
    "uglify-es": "^3.3.9"
  },
  "scripts": {
    "clean": "rimraf build",
    "watch": "rollup -c -w -i src/index.js",
    "lint": "eslint src",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "posttest": "npm run lint",
    "build:dev": "rollup -c -i src/index.js",
    "build:prod": "npm run build:dev && uglifyjs build/Chart.ErrorBars.js -c -m -o build/Chart.ErrorBars.min.js",
    "prebuild": "npm run clean && npm test",
    "build": "npm run build:prod",
    "preversion": "npm run test",
    "prepare": "npm run build:dev",
    "prepublishOnly": "npm run build:prod",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "release:pre": "release-it --preRelease=alpha --npm.tag=next"
  }
}
